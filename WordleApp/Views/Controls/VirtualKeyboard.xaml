<UserControl x:Class="WordleApp.Views.Controls.VirtualKeyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center">
        <!-- Перший рядок: QWERTYUIOP -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
            <Button Content="Q" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="W" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="E" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="R" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="T" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="Y" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="U" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="I" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="O" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="P" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
        </StackPanel>

        <!-- Другий рядок: ASDFGHJKL -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
            <Button Content="A" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="S" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="D" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="F" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="G" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="H" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="J" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="K" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="L" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
        </StackPanel>

        <!-- Третій рядок: ENTER ZXCVBNM BACKSPACE -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
            <Button Content="ENTER" 
                    Width="80" Height="40" 
                    Margin="2" FontWeight="Bold" FontSize="12"
                    Click="OnEnterClick"/>
            <Button Content="Z" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="X" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="C" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="V" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="B" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="N" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="M" Style="{StaticResource KeyboardButtonStyle}" Click="OnLetterClick"/>
            <Button Content="⌫" 
                    Width="80" Height="40" 
                    Margin="2" FontWeight="Bold" FontSize="16"
                    Click="OnBackspaceClick"/>
        </StackPanel>
    </StackPanel>
</UserControl>