<UserControl x:Class="WordleApp.Views.PlayerMenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="WORDLE" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding WelcomeMessage}" 
                       FontSize="18" 
                       HorizontalAlignment="Center" 
                       Margin="0,10,0,0"/>
        </StackPanel>
        
        <!-- Menu Options -->
        <StackPanel Grid.Row="1" 
                    MaxWidth="300" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            
            <Button Content="Нова гра"
                    Command="{Binding NewGameCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Height="50"
                    FontSize="16"
                    Margin="0,10"
                    Click="OnNewGameClick"/>
            
            <Button Content="Продовжити гру"
                    Command="{Binding ContinueGameCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Height="50"
                    FontSize="16"
                    Margin="0,10"
                    Click="OnContinueGameClick"/>
        </StackPanel>
        
        <!-- Logout -->
        <Button Grid.Row="2"
                Content="Вийти"
                Style="{StaticResource MaterialDesignFlatButton}"
                HorizontalAlignment="Right"
                Margin="20"
                Click="OnLogoutClick"/>
    </Grid>
</UserControl>