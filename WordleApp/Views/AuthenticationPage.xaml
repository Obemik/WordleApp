<UserControl x:Class="WordleApp.Views.AuthenticationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="1" MaxWidth="400" Margin="20">
            <TextBlock Text="WORDLE" 
                       FontSize="48" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30"/>
            
            <!-- Login/Register Form -->
            <materialDesign:Card Padding="20">
                <StackPanel>
                    <TextBlock Text="{Binding ModeText}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"/>
                    
                    <!-- Username field (only for registration) -->
                    <TextBox Text="{Binding Username}" 
                             materialDesign:HintAssist.Hint="Ім'я користувача"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Margin="0,0,0,15"
                             Visibility="{Binding IsLoginMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverted}"/>
                    
                    <!-- Email field -->
                    <TextBox Text="{Binding Email}" 
                             materialDesign:HintAssist.Hint="Email"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Margin="0,0,0,15"/>
                    
                    <!-- Password field -->
                    <PasswordBox x:Name="PasswordBox"
                                 materialDesign:HintAssist.Hint="Пароль"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                 Margin="0,0,0,15"/>
                    
                    <!-- Error message -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="Red" 
                               Margin="0,0,0,15"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                    
                    <!-- Submit button -->
                    <Button Content="{Binding ModeText}"
                            Command="{Binding IsLoginMode, Converter={StaticResource BoolToCommandConverter}, ConverterParameter='LoginCommand|RegisterCommand'}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,0,0,15"/>
                    
                    <!-- Switch mode button -->
                    <Button Content="{Binding SwitchModeText}"
                            Command="{Binding SwitchModeCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"/>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
    </Grid>
</UserControl>